@model UserListDto
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Roller</th>
        <th></th>
    </tr>

    @if (Model.Users.Count > 0)
    {
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td user-roles="@user.Id"></td>
                <td>
                    <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@user.Id">Rol Ata</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur.</td>
        </tr>
    }
</table>
