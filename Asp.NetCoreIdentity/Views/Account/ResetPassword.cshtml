@model Asp.NetCoreIdentity.Models.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

@if (ViewBag.status == "success")
{
    <div class="alert alert-info">Şifreniz yenileme linki e-posta adresinize göndeirlmiştir. E-postanızı kontrol ediniz.</div>
}
else
{
    <h4>Şifremi Unuttum</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="alert alert-info">
                Yeni şifre belirlemek için kayıtlı e-posta adresini yazınız.
                Şifre değiştirme linkini e-posta adresinize göndereceğiz.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}